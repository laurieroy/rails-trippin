<div class="h-screen w-full flex flex-col">
	<%= turbo_frame_tag :modal do %>
		<div class="w-full fixed h-screen top-0 flex justify-center pt-40 data-modal-target="container">

			<div class="w-full h-screen bg-gray-800 bg-opacity-50 fixed top-0" data-action="click->modal#close"></div>					
			<div class="mx-auto w-3/4 lg:w-1/2 bg-gray-50 rounded-lg self-start p-4 fixed">	
				<div class="flex justify-between">
					<h1 class="text-4xl my-4 text-gray-800">Edit Place</h1>
					<a href="#" class="text-gray-800 font-semibold" data-action="modal#close">X</a>
				</div>
				<div class="w-full mt-8">
					<%= render 'form', place: @place %>
				</div>
			</div>
		</div>
	<% end %>
</div>
	
